# Define the fzf_cd function
fzf_cd() {
    local dir
    dir=$(find ${WORKSPACE} -mindepth 1 -maxdepth 1 -type d | fzf --prompt "--GOTO Project: ") && cd "$dir"
}

fzf_nvim() {
    local dir
    dir=$(find ${WORKSPACE} -mindepth 1 -maxdepth 1 -type d | fzf --prompt "--NVIM Project: ") && cd "$dir" && nvim
}

alias fcd=fzf_cd
alias fdd=fzf_nvim
